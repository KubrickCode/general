{
  "statusLine": {
    "type": "command",
    "command": "bash /workspaces/general/.claude/statusline.sh"
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash /workspaces/general/.claude/notify.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash /workspaces/general/.claude/notify.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            // TODO: Modify the path to fit your project structure
            "command": "bash -c 'file=\"$TOOL_ARG_file_path\"; case \"$file\" in */src/backend/*.ts) just lint backend;; */src/frontend/*.ts|*/src/frontend/*.tsx) just lint frontend;; */src/go/*.go) just lint go;; *.json|*.yml|*.yaml|*.md) just lint config;; justfile) just lint justfile;; esac'"
          }
        ]
      }
    ]
  }
}
